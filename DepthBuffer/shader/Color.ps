// TYPEDEFS //
//////////////
struct PixelInputType
{
    float4 position : SV_POSITION;
    float4 color : COLOR;
};


////////////////////////////////////////////////////////////////////////////////
// Pixel Shader
////////////////////////////////////////////////////////////////////////////////
float4 ColorPixelShader(PixelInputType input) : SV_TARGET
{
    float depth;
    float4 color;
    depth=input.position.z/input.position.w;

    color.x=depth;
    color.y=depth;
    color.z=depth;
    color.w=1.0f;

    return color;
}
